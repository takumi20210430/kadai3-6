<div class="container-xl-12">
  <div class="row">
    <div class="col-md-12">
      <% if @range == "User" %>
        <h2>Users search for "<%= @word %>"</h2>
        <table class='table'>
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
                <td><%= user.name %></td>
                <td>フォロー数:<%= user.followeds.count %></td>
                <td>フォロワー数:<%= user.followers.count %></td>
                <td>
                  <% if user != current_user %>
                    <%= render 'relationships/follow_btn', user: user %>
                  <% end %>
                </td>
                <td><%= link_to 'Show', user_path(user), class: "user_#{user.id}" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <h2>Books search for "<%= @word %>"</h2>
        <table class='table'>
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                    <%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
                </td>
                <td><%= link_to book.title, book_path(book) %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>
